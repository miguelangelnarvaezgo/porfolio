          table
            thead
              tr 
                td
                  p Castellano
                td
                  p Nativo
              tr 
                td
                  p Catalán
                td
                  p Alto
              tr 
                td
                  p Inglés
                td
                  p Báscio    
    article
      section#experiencia.experiencia
        h3 Experiencia profesional
        +experiencia('experiencia-row')
      section#estudios.estudios
        h3 Estudios
        +estudios('estudios-row')
